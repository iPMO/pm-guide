  <% processtxt = process.get_proc_name %>
  <% style = "width:50%; height:100%;background-color:#67fd9a;border-color:black;text-align:left;vertical-align:top; border-style:solid"%>
<% when 3 %>
  <% process = @project.get_processes[3] %>
  <% processtxt = process.get_proc_name %>
  <% style = "width:50%; height:100%;background-color:#67df9d;border-color:black;text-align:left;vertical-align:top; border-style:solid"%>
<% when 4 %>
