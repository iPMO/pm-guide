  <% process = @project.get_processes[1] %>
  <% processtxt = process.get_proc_name %>
  <% style = "width:50%; height:100%;background-color:#87cefa;border-color:black;text-align:left;vertical-align:top; border-style:solid"%>
<% when 2 %>
