<% cswitch = params['process'].to_i %>
<% case cswitch %>
<% when 0 %>
  <% processtxt = "Start Up a Project" %>
  <% process = @project.get_processes[0] %>
  <% style = "width:50%; height:100%;background-color:#fffe65;border-color:black;text-align:left;vertical-align:top; border-style:solid"%>
<% when 1 %>
  <% processtxt = "Directing a Project" %>
<% when 2 %>
  <% processtxt = "Initiating a Project" %>
<% when 3 %>
  <% processtxt = "Controling a Stage" %>
<% when 4 %>
  <% processtxt = "Managing Product Delivery" %>
<% when 5 %>
  <% processtxt = "Managing Stage Boundaries" %>
<% when 6 %>
  <% processtxt = "Closing a Project" %>
<% else %>
  <% processtxt = "not known" %>
<% end %>

<h1><%= "#{params['project_name']} => #{processtxt} : NextStage[#{process.is_eligable?}]" %></h1>
<table style='<%= "#{style}" %>'>
  <tr>
    <th><u>hierachie</u></th>
   <th>|</th>
   <% process.get_proc_dataframe.each{|col| %>
     <%= "<th><u>#{col.name.chop}</u></th>" %>
    <% } %>
  </tr>
  <%= process.get_proc_dataframe.to_html_tbody() %>
</table>
