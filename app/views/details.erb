<!-- ruby helper //-->
<% if !params['project_name'].nil? %>
  <h1><%= "PRINCE2 Process Details View for #{params['project_name']} " %></h1>
  <!-- Initialize the NON persistent Project Object and load with documents hash and data_frame //-->
  <% @project = Project.new(params['project_name'].upcase!) %>
  <!-- load with project data_frame //-->
  <% @data_frame = @project.get_project_data_frame %>
<% else %>
  <h1><%= "Welcome to the interactive Project Management guide !" %></h1>
  <% @data_frame = Project.get_default_data_frame %>
<% end %>

