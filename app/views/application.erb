	   <img style="float: right; border:1px double black" src="/public/hukombi_bwb.jpg"/>
      </nav>	  
    </header>
    <hr />
    <article>
     <section class="dynamic_content">
      <main class="main_text">
        <%= yield %>
      </main>
     </section>
     <section class="fixed_content">
       <% @fixcontent = @params['fixcontent'] %>
       <% Rails.logger.info "######## fixcontent ====== #{@fixcontent}" %>
      <% if @fixcontent != nil %>
        <% then %>
       <%= render(:erb,:"#{@fixcontent}") %>
     <% else %>
     <% end %>
     </section>
    </article>
    <br />
    <hr />
    <br />
